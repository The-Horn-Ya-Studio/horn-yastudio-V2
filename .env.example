# Supabase Credentials (required if using Supabase mode)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Postgres Connection Details (optional, for advanced usage)
REACT_APP_SUPABASE_URL_POSTGRES_URL=postgres://postgres:password@host:port/dbname
REACT_APP_SUPABASE_URL_POSTGRES_USER=postgres
REACT_APP_SUPABASE_URL_POSTGRES_HOST=db.your-project.supabase.co
REACT_APP_SUPABASE_URL_SUPABASE_JWT_SECRET=your-jwt-secret

# Storage mode: 'local' (browser localStorage) or 'supabase'
REACT_APP_STORAGE_MODE=local

# Other environment variables
NODE_ENV=development
REACT_APP_API_URL=/api
